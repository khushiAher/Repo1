package pattern;

public class Eg5 {

	public static void main(String[] args) 
	{
		  //*
		 //**
		//***
	   //****
	  //*****
		
		// row...>5 column...>5
		
		int star=1;
		int space=4;
		
		//outer loop...> row
		
		for(int row=1; row<=5; row++)
		{
			//inner loop...> column
			// space
			
			for(int i=1; i<=space; i++)
			{
				System.out.println(" ");
			}
			//star
			for(int column=1; column<=star; column++)
			{
				System.out.print("*");
			}
			System.out.println();
			star++;
			space--;
		}
		System.out.println("///////////////");
		
		//  row...>5 column...>5
		int Star=5;
		int Space=0;
		
		//outer loop...>row
		for(int row=1; row<=5; row++)
		{
			// inner loop...>column
			//space
			
			for(int i=1;i<=Space;i++)
			{
			System.out.println(" ");
			}
			//star
			for(int column=1; column<=Star; column++)
			{
				System.out.print("*");
			}
			System.out.println();
			Star--;
		}

	}
	
	

}
