package pattern;

public class Eg5 {

	public static void main(String[] args) 
	{
		int space=0;
		int star=5;
		
		for(int row=1; row<=5; row++)  // outer for loop....> row
		{
			for(int i=1; i<=space; i++)  //inner for loop.....> column  // space
			{
				System.out.print("");
			}
			 for(int column=1; column<=star; column++)
			 {
				 System.out.println("*");
			 }
			 
				 System.out.println();
				 space++;
				 star--;
			 
			
		}

	}

}
