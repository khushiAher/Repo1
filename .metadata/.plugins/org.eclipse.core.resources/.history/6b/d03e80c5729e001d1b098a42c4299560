package pattern;

public class Eg5 {

	public static void main(String[] args) 
	{
		  //*
		 //**
		//***
	   //****
	  //*****
		
		// row...>5 column...>5
		
		int star=1;
		int space=4;
		
		//outer loop...> row
		
		for(int row=0; row<=5; row++)
		{
			//inner loop...> column
			// space
			
			for(int i=1; i<=space; i++)
			{
				System.out.println("");
			}
			//star
			for(int column=1; column<=star; column++)
			{
				System.out.print("*");
			}
			System.out.println();
			star++;
			space--;
		}

	}

}
